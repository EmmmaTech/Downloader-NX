<brls:Box
    width="auto"
    height="auto">

    <brls:Box
        width="auto"
        height="auto"
        axis="column"
        paddingLeft="@style/brls/tab_frame/content_padding_sides"
        paddingRight="@style/brls/tab_frame/content_padding_sides"
        paddingTop="@style/brls/tab_frame/content_padding_top_bottom"
        paddingBottom="@style/brls/tab_frame/content_padding_top_bottom">

        <brls:Button
            id="update_button"
            width="auto"
            height="auto"
            shrink="1.0"
            style="primary"
            text="@i18n/main/update/check_update"
            marginBottom="15px"/>

        <brls:Label 
            id="info"
            width="auto"
            height="auto"
            text=""
            marginTop="15px"
            marginBottom="15px"/>

        <brls:Box
            width="auto"
            height="auto">

            <brls:Button
                id="yes"
                width="auto"
                height="auto"
                shrink="1.0"
                style="primary"
                text="@i18n/main/update/update_yes"
                marginRight="15px"/>

            <brls:Button
                id="no"
                width="auto"
                height="auto"
                shrink="1.0"
                style="primary"
                text="@i18n/main/update/update_no"/>

        </brls:Box>

    </brls:Box>

</brls:Box>